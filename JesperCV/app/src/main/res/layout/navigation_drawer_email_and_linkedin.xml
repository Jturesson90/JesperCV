<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/material_navigationdrawer_vertical_4"
    android:orientation="horizontal"
    android:clickable="true">


    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/contact_me_linkedin"

        android:src="@drawable/ic_linkedin"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:id="@+id/contact_me_gmail"
        android:layout_marginLeft="@dimen/material_navigationdrawer_horizontal_1"
        android:src="@drawable/ic_gmail"
        android:layout_alignTop="@+id/contact_me_linkedin"
        android:layout_toRightOf="@+id/contact_me_linkedin"
        android:layout_toEndOf="@+id/contact_me_linkedin" />


</RelativeLayout>
